{
  "name": "ctm-credenciales-app",
  "version": "1.0.0",
  "description": "CTM Credential Admin - Internal app for creating, editing, and printing credential cards",
  "private": true,
  "type": "module",
  "packageManager": "bun@1.2.21",
  "workspaces": ["apps/*", "packages/*"],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "setup": "bun install && turbo run db:generate db:migrate db:seed",
    "clean": "turbo run clean && rm -rf node_modules",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "turbo run format",
    "check": "turbo run check",
    "check:fix": "turbo run check:fix",
    "type-check": "turbo run type-check",
    "db:generate": "turbo run db:generate",
    "db:migrate": "turbo run db:migrate",
    "db:seed": "turbo run db:seed",
    "db:studio": "turbo run db:studio"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@types/bun": "latest",
    "turbo": "^2.5.6",
    "typescript": "^5.9.2"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
